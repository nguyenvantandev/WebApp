<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>AjaxでHTTP通信を行う</title>
<link href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript" ></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
 
<!-- スクリプト部分 -->
<script type="text/javascript">
    $( function() {
        $( '#ajax-button' ) .click(
        function() {
            $("#loading").html("<img src='./gif-load.gif'/>");
            $.ajax({
              url: 'http://localhost:8080/EmployeeInfoSystem/',
              type:'GET',
              dataType: 'jsonp',
              timeout:10000,
              success: function(data) {
                           alert("ok");
                       },
              error: function(data) {
                           alert("ng");
                     },
              complete : function(data) {
                          $("#loading").empty();
                          $("#loading").html("<p>通信終了</p>");
                     }
            });
        });
    } );
</script>
 
</head>
 
<!-- HTML部分 -->
<body>
 
<h1>AjaxでHTTP通信中にローディング画像を表示する</h1>
<p><input type="button" id="ajax-button" value="click" /> <br />
<div id="loading" />
 
</body>
</html>